<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="youzhao.kuaifang.ConfirmOrdersActivity">

    <RelativeLayout
        android:id="@+id/confirm_orders_toptext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red">
        	<ImageView
        	    android:id="@+id/confirm_orders_back"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:src="@drawable/back"
        	    android:layout_centerVertical="true"
        	    android:layout_marginLeft="20dp"/>
        	<TextView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="确认订单"
        	    android:textColor="@color/white"
        	    android:textSize="18sp"
        	    android:textStyle="bold"        	    
        	    android:layout_centerInParent="true"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/confirm_orders_submit_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        	<TextView
        	    android:id="@+id/confirm_orders_should_pay_text"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="应付金额: ￥"
        	    android:textSize="18sp"
        	    android:textStyle="bold"
        	    android:layout_centerVertical="true"
        	    android:layout_marginLeft="10dp"/>
        	<TextView
        	    android:id="@+id/confirm_orders_should_pay"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="0.00"
        	    android:textColor="@color/red"
        	    android:textSize="14sp"
        	    android:layout_toRightOf="@id/confirm_orders_should_pay_text"
        	    android:layout_marginLeft="5dp"
        	    android:layout_centerVertical="true"/>
        	<TextView
        	    android:id="@+id/confirm_orders_submit_orders"
        	    android:layout_width="80dp"
        	    android:layout_height="match_parent"
        	    android:text="提交订单"
        	    android:textColor="@color/white"
        	    android:onClick="click"
        	    android:textSize="16sp"
        	    android:background="@color/red"
        	    android:gravity="center"
        	    android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/confirm_orders_price_sum_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@id/confirm_orders_submit_relativelayout"
        android:background="@color/cream">
        	<TextView
        	    android:id="@+id/confirm_orders_price_sum_text"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="总额:￥"
        	    android:layout_centerVertical="true"
        	    android:layout_marginLeft="4dp"/>
        	<TextView
        	    android:id="@+id/confirm_orders_price_sum"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:textColor="@color/red"
        	    android:text="0.00"
        	    android:layout_toRightOf="@id/confirm_orders_price_sum_text"
        	    android:layout_centerVertical="true"/>        	
    </RelativeLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_orders_toptext"
        android:layout_above="@id/confirm_orders_price_sum_relativelayout">
        <LinearLayout
       	    android:layout_width="match_parent"
       	    android:layout_height="wrap_content"
       	    android:orientation="vertical">
        	<RelativeLayout
				android:id="@+id/confirm_order_user_information"
				android:layout_width="match_parent"
				android:layout_height="90dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/xuxian">
	        	<TextView
	        	    android:id="@+id/confirm_order_user_name"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:text="游泳"
	        	    android:textColor="@color/gray"
	        	    android:layout_marginLeft="20dp"
	        	    android:layout_marginTop="20dp"/>
		        	<TextView
		        	    android:id="@+id/confirm_order_user_phone_number"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:text="110"
		        	    android:textColor="@color/gray"
		        	    android:layout_toRightOf="@id/confirm_order_user_name"
		        	    android:layout_marginLeft="10dp"
		        	    android:layout_alignTop="@id/confirm_order_user_name"/>
		        	<TextView
		        	    android:id="@+id/confirm_order_user_address_city"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:text="北京市海淀区"
						android:textSize="16sp"
		        	    android:layout_alignLeft="@id/confirm_order_user_name"
		        	    android:layout_alignParentBottom="true"
		        	    android:layout_marginBottom="15dp"/>
		        	<TextView
		        	    android:id="@+id/confirm_order_user_address_building"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:text="8单元8栋"
		        	    android:textSize="16sp"
		        	    android:layout_toRightOf="@id/confirm_order_user_address_city"
		        	    android:layout_alignTop="@id/confirm_order_user_address_city"
		        	    android:layout_marginLeft="10dp"/>
		        	<ImageView
		        	    android:id="@+id/confirm_order_user_address_forward"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:src="@drawable/forward"
		        	    android:layout_centerVertical="true"
		        	    android:layout_alignParentRight="true"
		        	    android:layout_marginRight="20dp"/>
    		</RelativeLayout>
    		
        	 <View
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        android:background="@color/gray"
		       	android:layout_marginTop="5dp"/>
    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="150dp"
		        android:orientation="horizontal">
	        	<TextView
	        	    android:layout_width="0dp"
	        	    android:layout_height="match_parent"
	        	    android:text="付款方式"
	        	    android:layout_weight="1"
	        	    android:gravity="center"
	        	    android:textSize="14sp"/>
	        	<View
	        	    android:layout_width="0.5dp"
	        	    android:layout_height="match_parent"
     	    		android:background="@color/gray"/>
	        	<LinearLayout
	        	    android:layout_width="0dp"
	        	    android:layout_height="match_parent"
	        	    android:layout_weight="4"
	        	    android:orientation="vertical">
        	    	<RelativeLayout
        	    	    android:id="@+id/confirm_orders_daofu"
        	    	    android:layout_width="match_parent"
        	    	    android:layout_height="0dp"
        	    	    android:layout_weight="1">
       	    	    	<ImageView
       	    	    	    android:id="@+id/daofu"
       	    	    	    android:layout_width="wrap_content"
       	    	    	    android:layout_height="wrap_content"
       	    	    	    android:src="@drawable/ico26"
       	    	    	    android:layout_centerVertical="true"
       	    	    	    android:layout_marginLeft="20dp"/>
       	    	    	<TextView
       	    	    	    android:id="@+id/daofu_text"
       	    	    	    android:layout_width="wrap_content"
       	    	    	    android:layout_height="wrap_content"
       	    	    	    android:text="货到付款"
       	    	    	    android:layout_toRightOf="@id/daofu"
       	    	    	    android:layout_centerVertical="true"
       	    	    	    android:layout_marginLeft="30dp"/>
    	    	    	<ImageView
      	    	    	    android:id="@+id/confirm_orders_daofu_choose"
      	    	    	    android:layout_width="wrap_content"
      	    	    	    android:layout_height="wrap_content"
      	    	    	    android:src="@drawable/ico23"
      	    	    	    android:layout_centerVertical="true"
      	    	    	    android:layout_alignParentRight="true"
      	    	    	    android:layout_marginRight="20dp"/>
		        	</RelativeLayout>
		        	    	
        	    	<View
        	    	    android:layout_width="match_parent"
        	    	    android:layout_height="0.5dp"
        	    	    android:background="@color/gray"/>
				        	    	
        	    	<RelativeLayout
        	    	    android:id="@+id/confirm_orders_zhifubao"
        	    	    android:layout_width="match_parent"
        	    	    android:layout_height="0dp"
        	    	    android:layout_weight="1">
      	    	    	<ImageView
      	    	    	    android:id="@+id/zhifubao"
      	    	    	    android:layout_width="wrap_content"
      	    	    	    android:layout_height="wrap_content"
      	    	    	    android:src="@drawable/ico27"
      	    	    	    android:layout_centerVertical="true"
    	    	    	    		android:layout_marginLeft="10dp"/>
      	    	    	<TextView
      	    	    	    android:layout_width="wrap_content"
      	    	    	    android:layout_height="wrap_content"
      	    	    	    android:text="支付宝付款"
      	    	    	    android:layout_toRightOf="@id/zhifubao"
      	    	    	    android:layout_centerVertical="true"
      	    	    	   	android:layout_marginLeft="20dp"/>
       	    	    	<ImageView
       	    	    	    android:id="@+id/confirm_orders_zhifubao_choose"
       	    	    	    android:layout_width="wrap_content"
       	    	    	    android:layout_height="wrap_content"
       	    	    	    android:src="@drawable/ico22"
       	    	    	    android:layout_centerVertical="true"
       	    	    	    android:layout_alignParentRight="true"
       	    	    	    android:layout_marginRight="20dp"/>
       	    		</RelativeLayout>
				        	    	
        	    	<View
        	    	    android:layout_width="match_parent"
        	    	    android:layout_height="0.5dp"
        	    	    android:background="@color/gray"/>
				        	    	
        	    	<RelativeLayout
        	    	    android:id="@+id/confirm_orders_weixing"
        	    	    android:layout_width="match_parent"
        	    	    android:layout_height="0dp"
        	    	    android:layout_weight="1">
       	    	    	<ImageView
       	    	    	    android:id="@+id/weixing"
       	    	    	    android:layout_width="wrap_content"
       	    	    	    android:layout_height="wrap_content"
       	    	    	    android:src="@drawable/ico28"
       	    	    	    android:layout_centerVertical="true"
       	    	    	    android:layout_marginLeft="20dp"/>
       	    	    	<TextView
       	    	    	    android:layout_width="wrap_content"
       	    	    	    android:layout_height="wrap_content"
       	    	    	    android:text="微信支付"
       	    	    	    android:layout_toRightOf="@id/weixing"
       	    	    	    android:layout_centerVertical="true"
       	    	    	    android:layout_marginLeft="40dp"/>
       	    	    	<ImageView
       	    	    	    android:id="@+id/confirm_orders_weixing_choose"
       	    	    	    android:layout_width="wrap_content"
       	    	    	    android:layout_height="wrap_content"
       	    	    	    android:src="@drawable/ico23"
       	    	    	    android:layout_centerVertical="true"
       	    	    	    android:layout_alignParentRight="true"
			        	   	android:layout_marginRight="20dp"/>
				  	</RelativeLayout>
				</LinearLayout>
		   	</LinearLayout>
    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        android:background="@color/gray"
		       	android:layout_marginTop="5dp"/>
		    <!-- coupon 优惠券 -->
		    <RelativeLayout
		        android:id="@+id/confirm_orders_coupon"
		        android:layout_width="match_parent"
		        android:layout_height="40dp">
	        	<TextView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:text="点击选择或兑换优惠券"
	        	    android:textColor="@color/red"
	        	    android:layout_centerVertical="true"
	        	    android:layout_marginLeft="10dp"/>
	        	<ImageView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:src="@drawable/forward"
	        	    android:layout_centerVertical="true"
	        	    android:layout_alignParentRight="true"
	        	    android:layout_marginRight="30dp"/>
	    	</RelativeLayout>
				    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        android:background="@color/gray"
		       	android:layout_marginTop="5dp"/>
		    
		    <LinearLayout
		        android:id="@+id/confirm_orders_remark"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:orientation="horizontal">
	        	<TextView
	        	    android:layout_width="0dp"
	        	    android:layout_weight="1"
	        	    android:layout_height="wrap_content"
	        	    android:text="备注"
	        	    android:textColor="@color/gray"
	        	    android:layout_gravity="center_vertical"
			       	android:layout_marginLeft="30dp"/>
	        	<View
	        	    android:layout_width="0.5dp"
	        	    android:layout_height="match_parent"
	        	    android:background="@color/gray"/>
	        	<EditText
	        	    android:layout_width="0dp"
	        	    android:layout_weight="4"
	        	    android:layout_height="match_parent"
	        	    android:hint="请输入备注信息"
	        	    android:textSize="12sp"
	        	    android:background="@drawable/edittext_background"
	        	    android:layout_marginLeft="5dp"/>       	
				</LinearLayout>
				
		    	 <View
			        android:layout_width="match_parent"
			        android:layout_height="10dp"
			        android:background="@color/gray"
			       	android:layout_marginTop="5dp"/>
		    
			    <ListView
			        android:id="@+id/confirm_orders_medicine_lv"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:divider="@color/gray"
			        android:dividerHeight="0.5dp"/>
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="10dp"
			        android:background="@color/light_gray"/>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
