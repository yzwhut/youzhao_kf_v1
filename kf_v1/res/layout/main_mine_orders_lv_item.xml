<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="80dp">
    <TextView
         android:id="@+id/mine_orders_number_textview"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/gray"
         android:text="订单号"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="10dp"/>
     <TextView
         android:id="@+id/mine_orders_receiver_textview"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/gray"
         android:text="收货人"
         android:layout_centerVertical="true"
         android:layout_alignLeft="@id/mine_orders_number_textview"/>
     <TextView
         android:id="@+id/mine_orders_orderprice_textview"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/gray"
         android:text="订单金额"
         android:layout_alignParentBottom="true"
         android:layout_alignLeft="@id/mine_orders_number_textview"
         android:layout_marginBottom="10dp"/>
     <TextView
         android:id="@+id/mine_orders_number_toshow"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/gray"
         android:text="000000000000"
       	 android:layout_toRightOf="@id/mine_orders_number_textview"
         android:layout_alignBottom="@id/mine_orders_number_textview"
         android:layout_marginLeft="10dp"/>
     <TextView
         android:id="@+id/mine_orders_receiver_toshow"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/gray"
         android:text="游泳"
         android:layout_toRightOf="@id/mine_orders_receiver_textview"
         android:layout_centerVertical="true"
         android:layout_marginLeft="10dp"/>
     <TextView
         android:id="@+id/mine_orders_orderprice_toshow"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/gray"
         android:text="0.00"
         android:layout_toRightOf="@id/mine_orders_orderprice_textview"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="10dp"/>
     <TextView
         android:id="@+id/mine_orders_cancel_orders"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/white"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:text="取消订单"
         android:background="@drawable/mine_order_cancel_order_textview_background"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="10dp"/>
     <TextView
         android:id="@+id/mine_orders_go_pay"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/white"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:text="去付款"
         android:background="@drawable/mine_order_gopay_textview_background"
         android:layout_toLeftOf="@id/mine_orders_cancel_orders"
         android:layout_centerVertical="true"
         android:layout_marginRight="10dp"/>

</RelativeLayout>
