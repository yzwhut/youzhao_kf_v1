<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="youzhao.kuaifang.CheckMapAreaActivity" >
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red">
        <ImageView
            android:id="@+id/checkMapAreaActivityBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看开通区域"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/checkMapAreaActivity_Beijing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="北京"
            android:textColor="@color/red"
            android:gravity="center"
            android:background="@drawable/text_view_background"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/checkMapAreaActivity_shenzhen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="深圳"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@drawable/text_view_background"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/checkMapAreaActivity_guangzhou"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="广州"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@drawable/text_view_background"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/checkMapAreaActivity_shanghai"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="上海"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@drawable/text_view_background"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    
    <TextView
            android:id="@+id/checkMapAreaActivity_hangzhou"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="杭州"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@drawable/text_view_background"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
    
    <com.baidu.mapapi.map.MapView
        android:id="@+id/checkMapAreaActivityMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

</LinearLayout>
