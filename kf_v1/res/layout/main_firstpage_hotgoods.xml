<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    <ImageView
        android:id="@+id/main_1stpage_hotgoods_pic"
		android:layout_width="80dp"
		android:layout_height="80dp"
        android:src="@drawable/ic_empty"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal"/>
    
    <TextView
        android:id="@+id/main_hotgoods_medname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[康恩贝]肠炎灵片"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:lines="1"
        android:ellipsize="end"/>
    
   	<TextView
        android:id="@+id/main_hotgoods_mednumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0g * 0片 * 0板"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:lines="1"
        android:ellipsize="end"/>
    
    <RelativeLayout
        android:id="@+id/linelayout_hotgoods_pic_buttom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp">
        
        <TextView
            android:id="@+id/hot_goods_chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        
        <TextView
            android:id="@+id/hot_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:layout_toRightOf="@id/hot_goods_chinese"
            android:text="0.00"/>
        
        <TextView
            android:id="@+id/hot_goods_shoppingcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/main_add_to_shoppingcart"
            android:text="加入购物车"/>
    </RelativeLayout>

</LinearLayout>
