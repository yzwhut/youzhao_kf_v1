<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" >
    <ImageView
	    android:id="@+id/choose_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="10dp"
	    android:src="@drawable/ico49"/>
    <ImageView
        android:id="@+id/medicine_pic"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@drawable/tuijian_01"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/choose_button"/>
    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[扬子江]蓝岑口服液"
        android:layout_toRightOf="@id/medicine_pic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/medicine_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10mlX6支"
        android:layout_marginTop="6dp"
        android:layout_alignLeft="@id/medicine_name"
        android:layout_below="@id/medicine_name"/>
    <ImageView
        android:id="@+id/medicine_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gouwuche_jiahao1a"
        android:layout_alignLeft="@id/medicine_name"
        android:layout_below="@id/medicine_number"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/medicine_number_want_buy"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="1"
        android:layout_toRightOf="@id/medicine_minus"
        android:gravity="center"
        android:layout_marginLeft="10dp"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="6dp"
        android:background="@drawable/text_view_background"/>
    <ImageView
        android:id="@+id/medicine_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gouwuche_jianhao1a"
        android:layout_toRightOf="@id/medicine_number_want_buy"
        android:layout_alignTop="@id/medicine_minus"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/medicine_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/medicine_plus"/>

</RelativeLayout>
